<Page x:Class="BKFluentChat.Views.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BKFluentChat.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance Type=local:TestPage}"
      xmlns:models="clr-namespace:BKFluentChat.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">


    <Page.Resources>
        <!-- 资源 1: 联系人条目模板 -->
        <DataTemplate x:Key="ContactItemTemplate" DataType="{x:Type models:Contact}">
            <Button Command="{Binding ViewModel.SelectItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                    CommandParameter="{Binding}"
                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch"
                    Padding="0" Margin="0" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Grid Margin="12,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- 左侧列，宽度自适应头像 -->
                        <ColumnDefinition Width="*"/>
                        <!-- 右侧列，占据剩余所有空间 -->
                    </Grid.ColumnDefinitions>

                    <!-- 左侧：头像 -->
                    <Ellipse Grid.Column="0" Width="40" Height="40" VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding AvatarUrl, TargetNullValue={StaticResource DefaultAvatar}}"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- 右侧：两行文字 -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Name}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                        <!-- 第一行：备注名 -->
                        <TextBlock Text="{Binding Remark}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                        <!-- 第二行：状态 -->
                        <TextBlock Text="{Binding Status}" Foreground="Gray" FontSize="12" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Grid>
            </Button>
        </DataTemplate>

        <!-- 资源 2: Expander 样式 -->
        <Style x:Key="MinimalExpanderStyle" TargetType="Expander">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ToggleButton x:Name="HeaderToggleButton" Grid.Row="0"
                                          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          Command="{Binding ViewModel.SelectItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                          CommandParameter="{Binding}">

                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent" Padding="5">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="▶" x:Name="Arrow" Margin="5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </ToggleButton>
                            <ContentPresenter Grid.Row="1" x:Name="Content" Visibility="Collapsed" Margin="15,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="Arrow" Property="Text" Value="▼"/>
                                <Setter TargetName="Content" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" SourceName="HeaderToggleButton" Value="True">
                                <Setter Property="Background" TargetName="HeaderToggleButton" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧列表 -->
        <ui:ListView Grid.Column="0" ItemsSource="{Binding ViewModel.ContactGroups}"
                  Background="Transparent" BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ui:ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ui:ListView.ItemContainerStyle>
            <ui:ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ContactGroup}">
                    <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                              Style="{StaticResource MinimalExpanderStyle}">
                        <ItemsControl ItemsSource="{Binding Contacts}"
                                      ItemTemplate="{StaticResource ContactItemTemplate}"/>
                    </Expander>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>

        <!-- 右侧详细信息面板 -->
        <Grid Grid.Column="1" Background="#3F3F3F">
            <TextBlock Text="{Binding ViewModel.SelectedItemName}"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <!-- 默认情况下，我们让它可见，这样更容易调试 -->
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ViewModel.SelectedItemName}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>
</Page>
